<%- include('./includes/head.ejs') %>
</head>

<body>
    <%- include('./includes/navigation.ejs')%>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
               <% for (var product of prods) {%> 
                <article class="card product-item">
                    <header class="card_header">
                        <h1 class="product_title"><%=product.title%></h1>
                    </header>
                    <div class="card_image">
                        <img src="https://www.incimages.com/uploaded_files/image/970x450/getty_883231284_200013331818843182490_335833.jpg"
                            alt="A book">
                    </div>
                    <div class="card_content">
                        <h2 class="product_price">$19.99</h2>
                        <p class="product_description">A very interesting book</p>
                    </div>
                    <div class="card_actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
               <% } %>
            </div>
          <%} else {%>
          <h1>No Product Found</h1>
        <%}%>
    </main>
<%- include('./includes/end.ejs')%>